username = according to your mysql you can change in jdbcConfig
password = according to your mysql you can change in jdbcConfig


CREATE DATABASE ecommerce;

USE ecommerce;

CREATE TABLE products(
productId INT AUTO_INCREMENT PRIMARY KEY,
productName VARCHAR(100) NOT NULL,
productDescription VARCHAR(100),
quantity INT CHECK (quantity > 0),
price DECIMAL(10,2)
);

INSERT INTO products(productName,productDescription,quantity,price) VALUES
